<resources>
    <style name="Holo.PreferenceSeekBar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:layout">@layout/preference_widget_seekbar</item>
    </style>
    <style name="Holo.SeekBarDialogPreference" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:layout">@layout/preference_widget_seekbar_dialog</item>
        <item name="android:dialogLayout">@layout/preference_dialog_seekbar</item>
        <item name="android:negativeButtonText">@android:string/cancel</item>
        <item name="android:positiveButtonText">@android:string/ok</item>
    </style>

    <style name="AppTheme.ActionMode" parent="Base.Widget.AppCompat.ActionMode">
        <item name="background">@android:color/holo_red_dark</item>
        <item name="backgroundSplit">@android:color/black</item>
    </style>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="actionModeStyle">@style/AppTheme.ActionMode</item>
        <item name="windowActionModeOverlay">true</item>


        <item name="seekBarDialogPreferenceStyle">@style/Holo.SeekBarDialogPreference</item>
        <item name="seekBarPreferenceStyle">@style/Holo.PreferenceSeekBar</item>
        <!-- Customize your theme here. -->
        <!-- Set theme colors from http://www.google.com/design/spec/style/color.html#color-color-palette-->
        <!-- colorPrimary is used for the default action bar background -->
        <item name="android:colorPrimary">#2196F3</item>
        <!-- colorPrimaryDark is used for the status bar -->
        <item name="android:colorPrimaryDark">#1976D2</item>
        <!-- colorAccent is used as the default value for colorControlActivated
             which is used to tint widgets -->
        <item name="android:colorAccent">#FF4081</item>
        <!-- You can also set colorControlNormal, colorControlActivated
             colorControlHighlight and colorSwitchThumbNormal. -->
    </style>

</resources>
